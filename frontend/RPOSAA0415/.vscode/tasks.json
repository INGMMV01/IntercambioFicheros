{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "presentation": {
        "focus": true,
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${cwd}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    },
    {
      // Abre Chrome con los flags de depuraci√≥n
      "label": "open:chrome-debug",
      "type": "process",
      "command": "${env:ProgramFiles}\\Google\\Chrome\\Application\\chrome.exe",
      "args": [
        "--remote-debugging-port=9222",
        "--user-data-dir=${env:TEMP}\\chrome-debug-test",
        "http://localhost:4200"
      ],
    },
  ]
}
